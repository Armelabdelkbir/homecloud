<bpel:process name="homecloud"
         targetNamespace="homecloud.processus"
         suppressJoinFailure="yes"
         xmlns:tns="homecloud.processus"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns="http://worthiness.credit" xmlns:ns0="http://service.appaisal.home">

    <!-- Import the client WSDL -->
	<bpel:import location="homecloudArtifacts.wsdl" namespace="homecloud.processus" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:homecloud"
                     myRole="homecloudProvider"
                     />
        <bpel:partnerLink name="PLcredit" partnerLinkType="tns:credit" partnerRole="creditrole"></bpel:partnerLink>
        <bpel:partnerLink name="PLhome" partnerLinkType="tns:home" partnerRole="homerole"></bpel:partnerLink>
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:homecloudRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:homecloudResponseMessage"/>
        <bpel:variable name="PLcreditResponse" messageType="ns:creditCheckResponse"></bpel:variable>
        <bpel:variable name="PLcreditRequest" messageType="ns:creditCheckRequest"></bpel:variable>
        <bpel:variable name="PLhomeResponse" messageType="ns0:homeAppraisalResponse"></bpel:variable>
        <bpel:variable name="PLhomeRequest" messageType="ns0:homeAppraisalRequest"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in homecloud.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="tns:homecloud"
                 operation="process" variable="input"
                 createInstance="yes"/>
        
        <!-- Generate reply to synchronous request -->
        <bpel:assign validate="no" name="Assign-credit">
            
            
            
            <bpel:copy>
                <bpel:from><bpel:literal><ns:creditCheck xmlns:ns="http://worthiness.credit" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ns:SSN>ns:SSN</ns:SSN>
</ns:creditCheck>
</bpel:literal></bpel:from>
                <bpel:to variable="PLcreditRequest" part="parameters"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:SNN]]></bpel:query>
                </bpel:from>
                <bpel:to part="parameters" variable="PLcreditRequest">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:SSN]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:invoke name="Invoke-credit" partnerLink="PLcredit" operation="creditCheck" portType="ns:creditWorthinessPortType" inputVariable="PLcreditRequest" outputVariable="PLcreditResponse"></bpel:invoke>
        <bpel:if name="IfSSNvalide">
            <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$PLcreditResponse.parameters/ns:return='Approved']]></bpel:condition>
            <bpel:sequence>
                <bpel:assign validate="no" name="Assign-home">
                    <bpel:copy>
                        <bpel:from><bpel:literal><ns:homeAppraisal xmlns:ns="http://service.appaisal.home" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ns:homePrice>0</ns:homePrice>
  <ns:loanAmount>0</ns:loanAmount>
</ns:homeAppraisal>
</bpel:literal></bpel:from>
                        <bpel:to variable="PLhomeRequest" part="parameters"></bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from part="payload" variable="input">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:homeprice]]></bpel:query>
                        </bpel:from>
                        <bpel:to part="parameters" variable="PLhomeRequest">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns0:homePrice]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from part="payload" variable="input">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:loanamount]]></bpel:query>
                        </bpel:from>
                        <bpel:to part="parameters" variable="PLhomeRequest">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns0:loanAmount]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                </bpel:assign>
                <bpel:invoke name="Invoke-home" partnerLink="PLhome" operation="homeAppraisal" portType="ns0:homeAppraisalServicePortType" inputVariable="PLhomeRequest" outputVariable="PLhomeResponse"></bpel:invoke>
                <bpel:assign validate="no" name="Assign-out">
                    <bpel:copy>
                        <bpel:from><bpel:literal><tns:homecloudResponse xmlns:tns="homecloud.processus" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result>tns:result</tns:result>
</tns:homecloudResponse>
</bpel:literal></bpel:from>
                        <bpel:to variable="output" part="payload"></bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from part="parameters" variable="PLhomeResponse">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns0:return]]></bpel:query>
                        </bpel:from>
                        <bpel:to part="payload" variable="output">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                </bpel:assign>
            </bpel:sequence>
            <bpel:else>
                <bpel:assign validate="no" name="Assign-cancel">
                    <bpel:copy>
                        <bpel:from><bpel:literal><tns:homecloudResponse xmlns:tns="homecloud.processus" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result>tns:result</tns:result>
</tns:homecloudResponse>
</bpel:literal></bpel:from>
                        <bpel:to variable="output" part="payload"></bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from part="parameters" variable="PLcreditResponse">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:return]]></bpel:query>
                        </bpel:from>
                        <bpel:to part="payload" variable="output">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                </bpel:assign>
            </bpel:else>
        </bpel:if>
        <bpel:reply name="replyOutput" 
               partnerLink="client"
               portType="tns:homecloud"
               operation="process" 
               variable="output"
               />
    </bpel:sequence>
</bpel:process>

